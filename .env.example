# Database Selection
# Set to 'true' to use Supabase, 'false' or leave empty for local PostgreSQL
USE_SUPABASE=false

# ===== LOCAL POSTGRESQL (Default) =====
# Uncomment and fill if using local database
# POSTGRES_DB=institut_torii_db
# POSTGRES_USER=yanis
# POSTGRES_PASSWORD=your_password
# POSTGRES_HOST=127.0.0.1
# POSTGRES_PORT=5432

# ===== SUPABASE CONFIGURATION =====
# Get these from your Supabase Dashboard > Settings > Database

# Option 1: Use full connection URL (recommended)
# Format: postgresql://user:password@host:port/dbname
# SUPABASE_DB_URL=postgresql://postgres:your_password@xxxx.supabase.co:5432/postgres

# Option 2: Use individual environment variables
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_supabase_password_here
SUPABASE_DB_HOST=your_project.supabase.co
SUPABASE_DB_PORT=5432

# Supabase API Keys (for non-ORM operations)
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
